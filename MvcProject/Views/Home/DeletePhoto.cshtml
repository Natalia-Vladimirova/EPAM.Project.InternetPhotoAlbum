@model MvcProject.Models.PhotoViewModel

@{
    ViewBag.Title = "Delete photo";
}

<h2>@ViewBag.Title</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.Id)

    <div class="form-horizontal">
        <div class="col-md-7 form-horizontal">
            <div class="form-group lead">
                @Html.DisplayFor(model => model.Name)
            </div>

            <div class="form-group">
                @Html.DisplayFor(model => model.Description)
            </div>

            <div class="form-group">
                <input type="submit" value="Delete photo" class="btn btn-default" />
                @Html.ActionLink("Cancel", $"Photos/{User.Identity.Name}/{Model.Id}", null, new { @class = "btn btn-default" })
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @if (Model.Image != null)
                {
                    <img style="max-width:50%" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" />
                }
                else
                {
                    <br />
                    <p class="text-muted lead">No photo</p>
                }
            </div>
        </div>
    </div>
}
